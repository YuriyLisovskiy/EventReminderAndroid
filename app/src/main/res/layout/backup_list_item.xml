<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:padding="5dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/backup_digest"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone" />

	<TextView
		android:id="@+id/backup_timestamp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/backup_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/colorTextMuted"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingStart="5dp"
			android:paddingEnd="0dp" />

		<TextView android:id="@+id/backup_events_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/colorTextMuted"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingStart="5dp"
			android:paddingEnd="0dp" />

		<TextView android:id="@+id/backup_contains_settings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/colorTextMuted"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingStart="5dp"
			android:paddingEnd="0dp" />

	</LinearLayout>

</LinearLayout>
